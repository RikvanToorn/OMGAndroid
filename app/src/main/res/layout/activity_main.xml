<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="Mr. Potato Head"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/body"
                android:layout_alignParentTop="true"
                android:id="@+id/body" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hat"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/hat" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/eyebrows"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/eyebrows" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/eyes"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/eyes" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/glasses"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/glasses" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ears"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/ears" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arms"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/arms" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shoes"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/shoes" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mouth"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/mouth" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mustache"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/mustache" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nose"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:id="@+id/nose" />


        </RelativeLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            >


            <CheckBox
                android:text="Hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/check_hat" />

            <CheckBox
                android:text="Eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/check_eyebrows" />

            <CheckBox
                android:text="Glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:id="@+id/check_glasses" />

            <CheckBox
                android:text="Eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:id="@+id/check_eyes" />

            <CheckBox
                android:text="Nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:id="@+id/check_nose" />

            <CheckBox
                android:text="Mustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:id="@+id/check_mustache" />

            <CheckBox
                android:text="Mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/check_mouth" />

            <CheckBox
                android:text="Arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:id="@+id/check_arms" />

            <CheckBox
                android:text="Shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/check_shoes" />

            <CheckBox
                android:text="Ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:id="@+id/check_ears" />

        </GridLayout>


    </LinearLayout>

</RelativeLayout>